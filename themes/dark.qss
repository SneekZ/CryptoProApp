/* Основной фон окна */
QMainWindow {
    background-color: #202123; /* Основной цвет фона ChatGPT */
    color: #ececf1; /* Светлый текст */
}

/* Заголовки таблиц */
QHeaderView::section {
    background-color: #2b2d31; /* Цвет заголовков таблицы */
    color: #ececf1; /* Светлый текст */
    border: 1px solid #3c3f41; /* Граница заголовков */
    padding: 6px;
    border-radius: 5px;
    font-weight: bold;
}

/* Таблица */
QTableWidget, QTableView {
    background-color: #2b2d31; /* Цвет ячеек таблицы */
    color: #ececf1; /* Светлый текст */
    border: 1px solid #3c3f41; /* Границы таблицы */
    gridline-color: #3c3f41; /* Цвет линий сетки */
    selection-background-color: #3c3f41; /* Цвет выделения строк */
    selection-color: #ececf1; /* Цвет текста выделенной строки */
}

/* Ячейки таблицы */
QTableWidget::item, QTableView::item {
    background-color: #2b2d31; /* Фон ячеек */
    color: #ececf1; /* Текст */
    padding: 6px;
}

QTableWidget::item:selected, QTableView::item:selected {
    background-color: #3c3f41; /* Цвет выделения */
    color: #ffffff; /* Светлый текст выделенной строки */
}

/* Кнопки */
QPushButton {
    background-color: #3c3f41; /* Фон кнопок */
    color: #ececf1; /* Светлый текст */
    border: 1px solid #565869; /* Граница кнопок */
    border-radius: 6px;
    padding: 8px 12px;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #565869; /* Подсветка при наведении */
}

QPushButton:pressed {
    background-color: #3c3f41; /* Темнее при нажатии */
}

/* Поля ввода текста */
QLineEdit {
    background-color: #3c3f41; /* Фон текстового поля */
    color: #ececf1; /* Светлый текст */
    border: 1px solid #565869; /* Граница */
    border-radius: 5px;
    padding: 6px;
}

/* Выпадающий список */
QComboBox {
    background-color: #3c3f41; /* Фон выпадающего списка */
    color: #ececf1; /* Светлый текст */
    border: 1px solid #565869; /* Граница */
    border-radius: 5px;
    padding: 6px;
}

QComboBox::drop-down {
    background-color: #565869; /* Цвет стрелки */
    border: none;
}

QComboBox QAbstractItemView {
    background-color: #3c3f41; /* Фон списка */
    color: #ececf1; /* Текст списка */
    border: 1px solid #565869; /* Граница */
    selection-background-color: #565869; /* Цвет выделения */
    selection-color: #ffffff; /* Светлый текст выделенного элемента */
}

/* Ползунки прокрутки */
QScrollBar:vertical, QScrollBar:horizontal {
    background-color: #202123; /* Фон */
    border: none;
    width: 12px;
    margin: 0px;
}

QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background-color: #3c3f41; /* Цвет ползунка */
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover, QScrollBar::handle:horizontal:hover {
    background-color: #565869; /* Ползунок при наведении */
}

QScrollBar::add-line, QScrollBar::sub-line {
    background: none;
    border: none;
}

/* Окно сообщений */
QMessageBox {
    background-color: #202123; /* Тёмный фон */
    color: #ececf1; /* Светлый текст */
    border: 1px solid #3c3f41; /* Граница */
    border-radius: 8px;
}

QMessageBox QPushButton {
    background-color: #3c3f41; /* Кнопки в окне сообщений */
    color: #ececf1; /* Светлый текст */
    border: 1px solid #565869; /* Граница кнопок */
    border-radius: 5px;
    padding: 6px 12px;
}

QMessageBox QPushButton:hover {
    background-color: #565869; /* Подсветка кнопок */
}

QMessageBox QPushButton:pressed {
    background-color: #3c3f41; /* Темнее при нажатии */
}

/* Метки (QLabel) */
QLabel {
    color: #ececf1; /* Светлый текст */
    font-size: 14px;
}

